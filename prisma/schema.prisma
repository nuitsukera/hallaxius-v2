generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Upload {
  id        String   @id @default(uuid())
  slug      String   @unique @db.VarChar(6)
  filename  String
  filesize  Int
  mimeType  String
  domain    String
  width     Int?
  height    Int?
  thumbnail String?
  uploadAt  DateTime @default(now())
  expiresAt DateTime

  @@index([slug])
  @@index([expiresAt])
  @@map("uploads")
}

model Domain {
  id        String  @id @default(uuid())
  domain    String  @unique
  subdomain String?

  @@index([domain])
  @@map("domains")
}