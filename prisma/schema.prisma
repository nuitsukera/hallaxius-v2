generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Upload {
  id        String   @id @default(cuid())
  slug      String   @unique @db.VarChar(6)
  filename  String
  filesize  Int
  mimeType  String
  domain    String
  uploadAt  DateTime @default(now())
  expiresAt DateTime

  @@index([slug])
  @@index([expiresAt])
  @@map("uploads")
}
